<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/foto"
            android:layout_width="90dp"
            android:layout_height="101dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="37dp"
            android:layout_marginTop="38dp"
            android:src="@drawable/camara" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="176dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="88dp"
            android:text="Nuevo Producto"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="55dp"
            android:text="Nombre del producto" />

        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="83dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/foto"
            android:text="Cantidad a almacenar" />

        <EditText
            android:id="@+id/cantidad"
            android:layout_width="82dp"
            android:layout_height="60dp"
            android:layout_below="@+id/foto"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="number" />

        <Spinner
            android:id="@+id/spinnerOrg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="231dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cantidad"
            android:text="UbicaciÃ³n" />

        <EditText
            android:id="@+id/txtCumple"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginBottom="158dp"
            android:hint="fecha de alarma" />

        <Button
            android:id="@+id/btnDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/foto"
            android:layout_alignTop="@+id/txtCumple"
            android:text="Elige Fecha" />

        <TextView
            android:id="@+id/checkBoxSexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="22dp"
            android:text="Fecha Actual" />

        <Button
            android:id="@+id/btnAgregarFoto"
            android:layout_width="107dp"
            android:layout_height="36dp"
            android:layout_below="@+id/foto"
            android:layout_toEndOf="@+id/textView2"
            android:text="Foto" />

        <Button
            android:id="@+id/botonRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_toEndOf="@+id/textView7"
            android:text="Registrar" />

        <Button
            android:id="@+id/btnList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnAgregarFoto"
            android:layout_alignTop="@+id/botonRegistrar"
            android:text="Listar producto" />

        <EditText
            android:id="@+id/fechaCad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginBottom="76dp"
            android:ems="10"
            android:hint="hora de alarma"
            android:inputType="time" />

        <Button
            android:id="@+id/obtenerh"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/foto"
            android:layout_alignTop="@+id/fechaCad"
            android:text="Elige Hora" />

        <EditText
            android:id="@+id/fecha_cadu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginBottom="231dp"
            android:ems="10"
            android:hint="fecha de caducidad"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btncad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/foto"
            android:layout_alignTop="@+id/fecha_cadu"
            android:text="Elige fecha" />

    </RelativeLayout>
</FrameLayout>